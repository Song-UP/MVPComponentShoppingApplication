<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipeRefresh"
    >

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <com.youth.banner.Banner
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="130dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <com.song.songup.shoppingapp.mvp.ui.weight.ActivityItemView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:bottomText="京东超市"
                    app:topSrc="@drawable/icon_social_checked"
                    />

                <com.song.songup.shoppingapp.mvp.ui.weight.ActivityItemView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:bottomText="京东超市"
                    app:topSrc="@drawable/icon_social_checked"
                    />
                <com.song.songup.shoppingapp.mvp.ui.weight.ActivityItemView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:bottomText="京东超市"
                    app:topSrc="@drawable/icon_social_checked"
                    />
                <com.song.songup.shoppingapp.mvp.ui.weight.ActivityItemView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:bottomText="京东超市"
                    app:topSrc="@drawable/icon_social_checked"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <com.song.songup.shoppingapp.mvp.ui.weight.ActivityItemView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:bottomText="京东超市"
                    app:topSrc="@drawable/icon_social_checked"
                    />

                <com.song.songup.shoppingapp.mvp.ui.weight.ActivityItemView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:bottomText="京东超市"
                    app:topSrc="@drawable/icon_social_checked"
                    />
                <com.song.songup.shoppingapp.mvp.ui.weight.ActivityItemView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:bottomText="京东超市"
                    app:topSrc="@drawable/icon_social_checked"
                    />
                <com.song.songup.shoppingapp.mvp.ui.weight.ActivityItemView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:bottomText="京东超市"
                    app:topSrc="@drawable/icon_social_checked"
                    />
            </LinearLayout>

            <com.song.songup.shoppingapp.mvp.ui.adapter.VerticalSwitchView
                android:id="@+id/switchView_winger"
                android:layout_width="match_parent"
                android:layout_height="90dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ry_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/listview_activity"
                />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>



    

</android.support.v4.widget.SwipeRefreshLayout>